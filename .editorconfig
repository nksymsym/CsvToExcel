root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true

[*.cs]
indent_style = space
indent_size = 4
charset = utf-8-bom
end_of_line = lf
insert_final_newline = true

# Sort using and Import directives with System.* appearing first
dotnet_sort_system_directives_first = true

[*.{cmd,bat}]
end_of_line = crlf